<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
      </layout>
    </appender>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="..\..\..\Server.MassTransit.log" />
      <appendToFile value="false" />

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level %thread %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="Watcher" type="log4net.Appender.FileAppender">
      <file value="..\..\..\Server.Proxy.MassTransit.log" />
      <appendToFile value="false" />

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level %thread %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
    </root>
	  <logger name="MassTransit.Messages">
		  <level value="ALL" />
	  </logger>
  </log4net>
</configuration>