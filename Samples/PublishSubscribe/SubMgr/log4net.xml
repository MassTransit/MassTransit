<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<!-- Appender Config Examples: http://logging.apache.org/log4net/release/config-examples.html -->
	<appender name="Console" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%-4timestamp [%thread] %-5level %logger %ndc - %message%newline" />
		</layout>
	</appender>

	<appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
		<file value="app_name.log" />
		<appendToFile value="true" />
		<rollingStyle value="Date" />
		<datePattern value="yyyyMMdd" />
		<!-- files rolled at day -->
		<maxSizeRollBackups value="10" />
		<!-- only 10 days kept -->
		<maximumFileSize value="1MB" />
		<!-- file size capped at 1MB -->

		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%level %thread %logger - %message%newline" />
		</layout>
	</appender>

  <appender name="NH.SQL" type="log4net.Appender.RollingFileAppender">
    <file value="nh.sql.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd" />
    <!-- files rolled at day -->
    <maxSizeRollBackups value="10" />
    <!-- only 10 days kept -->
    <maximumFileSize value="1MB" />
    <!-- file size capped at 1MB -->

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%level %thread %logger - %message%newline" />
    </layout>
  </appender>
  
	<!-- Custom appender for MassTransit's Messages -->
	<appender name="MT.Messages" type="log4net.Appender.FileAppender">
		<file value="masstransit.messages.log" />
		<appendToFile value="false" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%message%newline" />
		</layout>
	</appender>
  <appender name="MT.Messages.Console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline" />
    </layout>
  </appender>

	<!-- Set root logger level to DEBUG and its only appender to Console -->
	<root>
		<level value="OFF" />
	</root>


	<!-- Standard NHibernate Logging Settings -->
	<logger name="NHibernate">
		<level value="OFF" />
	</logger>

	<logger name="NHibernate.SQL">
		<level value="OFF" />
		<appender-ref ref="NH.SQL" />
	</logger>

	<!-- Standard MassTransit Logging Settings -->
	<logger name="MassTransit">
		<level value="OFF" />
	</logger>

	<logger name="MassTransit.Messages">
		<level value="DEBUG" />
		<appender-ref ref="MT.Messages.Console" />
	</logger>

  <logger name="SubMgr">
    <level value="DEBUG" />
    <appender-ref ref="Console" />
  </logger>
</log4net>