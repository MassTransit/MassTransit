<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../netfx.props" />
  <Import Project="../../signing.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>MassTransit.DocumentDb</PackageId>
    <Title>MassTransit.DocumentDb</Title>
    <PackageTags>MassTransit;DocumentDb</PackageTags>
    <Description>MassTransit DocumentDb persistence support; $(Description)</Description>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
      <DefineConstants>$(DefineConstants);NETCORE</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
      <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-*" PrivateAssets="All"/>
      <ProjectReference Include="..\..\MassTransit\MassTransit.csproj"/>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='net452'">
      <Reference Include="System"/>
      <Reference Include="System.ComponentModel.DataAnnotations"/>
      <Reference Include="System.Core"/>
      <Reference Include="System.Data.DataSetExtensions"/>
      <Reference Include="System.Data"/>
      <Reference Include="System.Xml"/>
      <PackageReference Include="Microsoft.Azure.DocumentDB" Version="2.5.1"/>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='netstandard2.0'">
      <PackageReference Include="Microsoft.Azure.DocumentDB.Core" Version="2.5.1"/>
  </ItemGroup>
</Project>
